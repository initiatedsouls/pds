<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HawkerProfileController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label fx:id="adminAgencyName" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Admin Agency Name" textAlignment="RIGHT">
                     <padding>
                        <Insets right="25.0" />
                     </padding>
                     <font>
                        <Font name="Arial" size="36.0" />
                     </font>
                  </Label>
                  <Label fx:id="adminMobileLabel" text="Mobile">
                     <font>
                        <Font name="Arial" size="28.0" />
                     </font>
                  </Label>
                  <Label fx:id="adminAddrLabel" text="Addr" wrapText="true">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="150.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Label text="Hawker Details" underline="true">
                     <font>
                        <Font name="Arial" size="24.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label fx:id="editAgencyNameTF" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="RIGHT">
                           <padding>
                              <Insets right="25.0" />
                           </padding>
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="editMobileNumTF" alignment="CENTER_LEFT">
                           <font>
                              <Font name="Arial" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="editNameTF">
                           <font>
                              <Font name="Arial" size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label text="Code : ">
                                 <font>
                                    <Font name="Arial" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="editHawkerCodeTF" alignment="CENTER_LEFT">
                                 <font>
                                    <Font name="Arial" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label text="Bill Category :">
                                 <font>
                                    <Font name="Arial" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="editBillCategoryTF">
                                 <font>
                                    <Font name="Arial" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#viewHawkerClicked" text="View Hawker Details" />
                        <Button mnemonicParsing="false" onAction="#changeMobileClicked" text="Edit Hawker Details" />
                        <Button mnemonicParsing="false" onAction="#changePasswordClicked" text="Change Password" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
